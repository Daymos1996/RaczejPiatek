<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_background"
    android:layout_gravity="center"
    tools:context=".ProfilActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/add_image" />

        <TextView
            android:id="@+id/txtFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:fontFamily="casual"
            android:gravity="center"
            android:textColor="#FF335F"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="casual"
            android:gravity="center"
            android:textColor="#FF335F"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="casual"
            android:gravity="center"
            android:textColor="#FF335F"
            android:textSize="15dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txtPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="casual"
            android:gravity="center"
            android:textColor="#FF335F"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="casual"
            android:gravity="center"
            android:textColor="#FF335F"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="casual"
            android:gravity="center"
            android:textColor="#FF335F"
            android:textSize="15dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/invite_user_to_friends_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_background"
            android:fontFamily="casual"
            android:text="Add Friend"
            android:textColor="#2A3c58"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/go_to_find_friends_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_for_profil"
            android:fontFamily="casual"
            android:text="Find Friends"
            android:textColor="#2A3c58"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/go_to_friends_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_for_profil"
            android:fontFamily="casual"
            android:text="Friends"
            android:textColor="#2A3c58"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/deleteUser"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_for_profil"
            android:fontFamily="casual"
            android:text="Delete Account"
            android:textColor="#2A3c58"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/changePassword"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_for_profil"
            android:fontFamily="casual"
            android:text="Change Password"
            android:textColor="#2A3c58"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/inviteFriends"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_for_profil"
            android:fontFamily="casual"
            android:text="zaproszenia"
            android:textColor="#2A3c58"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/chatToFriend"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_for_profil"
            android:fontFamily="casual"
            android:text="chat"
            android:textColor="#2A3c58"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="invisible" />
    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

</android.support.constraint.ConstraintLayout>